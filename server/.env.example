# Backend (server) env vars
NODE_ENV=production
PORT=5000
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public
JWT_SECRET=replace-with-strong-secret
# Optional: CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-frontend-domain.vercel.app

# Maintenance (optionnel)
# Reset complet du schéma public (destructif):
#  - ALLOW_DB_RESET=true expose POST /admin/reset-db (protégé par x-admin-secret = DB_RESET_TOKEN)
ALLOW_DB_RESET=false
DB_RESET_TOKEN=
# Bootstrap d’un SUPER_ADMIN (non destructif):
#  - ALLOW_BOOTSTRAP_USER=true expose POST /admin/bootstrap-super-admin (même protection x-admin-secret)
ALLOW_BOOTSTRAP_USER=false
